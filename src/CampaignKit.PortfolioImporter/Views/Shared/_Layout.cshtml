@{

    var title = (string) ViewBag.Title;
    title = string.IsNullOrWhiteSpace(title) ? string.Empty : $"- {title.Trim()}";
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap-dialog.css" rel="stylesheet" />
    <link href="~/css/filehandler.min.css" rel="stylesheet" />
    @RenderSection("styles", false)
</head>
<body>
<header>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#filehandler-navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">
                    <a href="~/">Portfolio Importer</a> @title
                </div>
            </div>
            <div class="collapse navbar-collapse" id="filehandler-navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a asp-controller="Home" asp-action="Import">Import Portfolio</a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Legalities">Legalities/Imprint</a>
                    </li>
                    <li class="navbar-image">
                        <a href="https://campaign-logger.com" target="_blank">
                            <img src="https://campaign-logger.com/img/icon.png" />
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main>
    @RenderBody()
</main>

<footer></footer>

<script src="~/js/jquery.min.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/jquery.validate.unobtrusive.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/bootstrap-dialog.min.js"></script>
@RenderSection("scripts", false)
</body>
</html>