@model CampaignKit.PortfolioImporter.ViewModels.ImportViewModel

@{
    ViewBag.Title = "Import Portfolio";
}

<div class="container">
    <div class="row">
        <div class="col-sm-1 col-md-2 col-lg-3">
        </div>
        <div class="col-sm-10 col-md-8 col-lg-6">
            <h2>@ViewBag.Title</h2>

            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <form method="post" asp-antiforgery="true" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="control-label" asp-for="Portfolio"></label>
                            <input class="form-control" asp-for="Portfolio" />
                            <span class="text-danger" asp-validation-for="Portfolio"></span>
                        </div>
                        <div class="form-group">
                            <input class="btn btn-primary pull-right" type="submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-1 col-md-2 col-lg-3">
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(function() {
            $('[data-toggle="popover"]').popover();
        });
    </script>
}