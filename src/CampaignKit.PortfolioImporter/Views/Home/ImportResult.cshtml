@model IEnumerable<CampaignKit.PortfolioImporter.Entities.FormattedCharacter>

@{
    ViewBag.Title = "Import Portfolio Result";
}

<div class="container">
    <h2>@ViewBag.Title</h2>

    @foreach (var character in Model)
    {
        <h3>@character.Name</h3>
        <!--
        <h4>Text</h4>
        <pre>@character.Text</pre>

        <h4>HTML</h4>
        <pre>@character.Html</pre>
        -->
        <h4>Formatted Text</h4>
        <pre>@character.FormattedText</pre>

        <h4>XML</h4>
        <pre>@character.Xml</pre>

        <hr />
    }
</div>